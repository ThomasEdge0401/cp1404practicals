BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint_y: 0.3

        TextInput:
            id: input_miles
            text: ''
            multiline: False
            input_filter: 'float'
            font_size: 32
            on_text: app.handle_convert()

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_x: 0.3

            Button:
                text: 'Up'
                on_press: app.handle_change(1)

            Button:
                text: 'Down'
                on_press: app.handle_change(-1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
        size_hint_y: 0.2

    Label:
        id: output_label
        text: ''
        font_size: 32
        color: (1, 1, 0, 1)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
